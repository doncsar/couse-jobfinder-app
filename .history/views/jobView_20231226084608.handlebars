<div id='job-view-container' class='container'>
   <div class='row text-center'>
      <a href='/' class='back-link main-color'>Back</a>
      <div id='img-container' class='col-md-12'>
         <img src='/img/company.svg' alt='Company Brand' />
      </div>
      <div class="col-md-12">
         <h1 class="main-color">{{job.dataValues.title}}</h1>
         <p class="bold">Who is qualified:</p>
         <p class="job-desc">{{job.dataValues.description}}</p>
         <p><span class="bold">The offered salary is></span>${{job.dataValues.salary}</p>
         <p>To work at
            <span class="bold main-color">{{job.dataValues.company}}.</span>
            
            You should apply by emailing <a href="mail.to{{job.dataValues.email}}"></a>
         </p>
      </div>
   </div>
</div>